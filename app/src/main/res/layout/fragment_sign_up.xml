<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/img_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/chat_uchun"
        android:layout_width="250dp"
        android:layout_marginTop="10dp"
        android:layout_height="250dp"/>


    <TextView
        android:id="@+id/txt_1"
        app:layout_constraintTop_toBottomOf="@id/img_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Chat App"/>

    <LinearLayout
        android:id="@+id/ln_1"
        app:layout_constraintTop_toBottomOf="@id/txt_1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="6dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="O'zaro Suhabtlashish uchun Yaratildi!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_2"
        app:layout_constraintTop_toBottomOf="@id/ln_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Telefon raqam bilan ro'yhatdan o'tish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_1"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txt_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="17dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_Number"
                android:padding="10dp"
                android:ems="1"
                android:inputType="phone"
                android:textSize="19sp"
                android:textColor="#1C1C1C"
                android:layout_marginBottom="15dp"
                android:hint="Telefon Raqamingizni kiriting!!"
                android:background="@drawable/bacground_shape_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <androidx.constraintlayout.utils.widget.MotionButton
                android:id="@+id/continueBtn"
                android:text="Continue"
                android:textStyle="bold|normal"
                android:textSize="19sp"
                app:cornerRadius="10dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAllCaps="false"
                android:background="#DF081981"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>